@model endep.Models.RegisterViewModel
@{
    ViewBag.Title = "Crear cuenta";
}

<div class="animate form login_form">
    <section class="login_content"> 
        
        <h4>Crear cuenta</h4>  

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {role = "form" }))
                {
                    @Html.AntiForgeryToken()      

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })                    

                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control", @placeholder = "Nombres" })                            
                        </div>

                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @placeholder = "Apellidos" })                            
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <span class="text-danger">@ViewBag.Error</span>
                            @Html.DropDownList("DominioId", null, htmlAttributes: new { @class = "form-control", @style = "margin-bottom: 19px;" })  
                            
                        </div>                        
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control", @placeholder = "Número de identificación" })                            
                        </div>

                        <div class="col-xs-12 col-sm-12 col-md-12">                            
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        </div>            
                        
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })                            
                        </div>         
                        
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar Password" })                            
                        </div>      
        
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-info" value="Registrarse" />
                        </div>
                        <p class="text-left">
                            @Html.ActionLink("Ya tengo una cuenta", "Login")
                        </p>

            }           
                <div class="clearfix"></div>
                <div class="separator">                   
                    <div>
                        <h1><i class="fa fa-paw"></i> @Html.ActionLink("Encuentros Deportivos", "Index", "Home")</h1>
                        <p><a> &copy; @DateTime.Now.Year - Encuentos Deportivos</a></p>
                    </div>
                </div>            
        </section>
    </div> 
