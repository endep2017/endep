<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/BootstrapCSS")
    @Styles.Render("~/Content/AwesomeCSS")
    @Styles.Render("~/Content/NProgressCSS")    
    @RenderSection("css", required: false)
    @Styles.Render("~/Content/CustomCSS")
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            <!-- left navigation -->
            @Html.Partial("_LeftNavigation")
            <!-- left navigation -->
            <!-- top navigation -->
            @Html.Partial("_TopNavigation")
            <!-- /top navigation -->
        }
        else
        {
            <!-- Inicio menu -->
            @Html.Partial("_MenuInicio")
            <!-- /Inicio menu -->
        }           
            <!-- page content -->
            @RenderBody()
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    <a> &copy; @DateTime.Now.Year - Encuentos Deportivos</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/BootstrapJS")
    @Scripts.Render("~/bundles/NProgressJS")
    @RenderSection("scripts", required: false)
</body>

</html>
